{
    "printWidth": 120,
    "tabWidth": 2,
    "parser": "babylon",
    "trailingComma": "none",
    "jsxBracketSameLine": true,
    "semi": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": ["*.json", ".eslintrc", ".tslintrc", ".prettierrc", ".tern-project"],
        "options": {
          "parser": "json"
        }
      },
      {
        "files": "*.{css,sass,scss,less}",
        "options": {
          "parser": "postcss"
        }
      },
      {
        "files": "*.ts",
        "options": {
          "parser": "typescript"
        }
      }
    ]
  }